{
    "name": "<%= appName %>",
    "version": "<%= version %>",
    "scripts": {
        "dev": "./node_modules/.bin/beautywe run dev",
        "test": "./node_modules/.bin/beautywe run test",
        "prod": "./node_modules/.bin/beautywe run prod",
        "lint": "git diff --cached --name-only | grep -E '\\.(js)$' | xargs eslint",
        "cm": "git-cz"
    },
    "dependencies": {
        "@beautywe/core": "^1.0.0",
        "@beautywe/plugin-event": "^1.0.0",
        "@beautywe/plugin-storage": "^1.0.0",
        "@beautywe/plugin-listpage": "^1.0.0",
        "@beautywe/plugin-logger": "^1.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.0",
        "@babel/polyfill": "^7.2.5",
        "@babel/preset-env": "^7.0.0",
        "@babel/register": "^7.4.0",
        "@beautywe/cli": "^1.0.3",
        "@commitlint/cli": "^7.6.1",
        "@commitlint/config-conventional": "^7.6.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-array-includes": "^2.0.3",
        "chalk": "^2.4.1",
        "git-cz": "^3.0.1",
        "cz-conventional-changelog": "^2.1.0",
        "del": "^3.0.0",
        "eslint": "^5.3.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.16.0",
        "gulp": "^4.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-clean": "^0.4.0",
        "gulp-csso": "^3.0.1",
        "gulp-define-module": "^0.1.5",
        "gulp-imagemin": "^4.1.0",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "^0.6.1",
        "gulp-sass": "^3.1.0",
        "gulp-tap": "^1.0.1",
        "gulp-uglify": "^3.0.0",
        "lodash": "^4.17.11",
        "plugin-error": "^1.0.1",
        "through2": "^2.0.3",
        "time-buried": "0.0.5",
        "webpack": "^4.29.6",
        "webpack-stream": "^5.2.1",
        "husky": "^2.3.0",
        "fs-extra": "^8.0.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npm run lint"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
